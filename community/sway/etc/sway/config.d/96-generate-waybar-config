bar {
    id default
    swaybar_command waybar
    position $waybar_position
}

exec_always {
    # waybar config changes will only be respected every other time
    'sleep 500 && cat $HOME/.config/waybar/config.template | sh /usr/share/sway/scripts/jsonreplace.sh .position $waybar_position >$HOME/.config/waybar/config'
}